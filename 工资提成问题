#define _CRT_SECURE_NO_WARNINGS 1
#include <stdio.h>
//方法一
int main()
{
	float salary=0;
	float num=0;
	printf("请输入工资：");
	scanf("%f", &num);
	if (num  < 10000) {
		salary =num *(1 + 0.1);
	}
	else if (num > 10000) {
		salary = (num - 10000) * (1 + 0.075) + 10000 * (1 + 0.1);
	}
	else {
		printf("请输入正确的工资");
	}
	printf("%f", salary);
	return 0;
}
//方法二
int main() {
	double salary = 0;
	int select = 0,num=0;
	printf("请输入工资");
	scanf("%d", &num);
	select = num % 10000;
	switch (select) {
	case 0:salary = num * (1 + 0.1); break;
	case 1:salary = 10000 * (1 + 0.1) + (num - 10000) * (1 + 0.075); break;
	}
	printf("%.2f", salary);
	return 0;
}

